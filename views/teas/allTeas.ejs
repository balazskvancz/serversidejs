<%- include('../partials/header') -%>

<%- include('../navbar/navbar') -%>

<div class="container-fluid">
  <div class="container mx-auto p-4 m-4">
    <div class="card">

      <div class="card-header position-relative text-center">
        <h1 class="text-center p-2 ">Teák áttekintése</h1>

        <a href="/tea/new" class="mx-auto">
          <button class="btn btn-secondary btn-lg shadow-none">Új tea <i class="bi bi-plus-circle-fill"></i></button>
        </a>
      </div>

      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-striped table-hover table-bordered">
            <thead>
              <tr>
                <th class="text-center align-middle">Hozzáadva</th>
                <th class="text-center align-middle">Megnevezés</th>
                <th class="text-center align-middle">Műveletek</th>
              </tr>
            </thead>
            <tbody>
              <% teas.forEach((tea) => { %>
              <tr>
                <td class="text-center align-middle w-25">
                  <%= tea.createdAt %> 
                </td>
                <td class="text-center align-middle w-50">
                  <%= tea.name %>
                </td>
                <td class="text-center align-middle w-25">

                  <a href="/tea/<%=tea.id%>/edit" class="text-dark">
                    <i class="bi bi-pencil-square m-2 display-6"></i>
                  </a>
                
                  <a href="/tea/<%= tea.id%>/delete" class="text-dark">
                    <i class="bi bi-trash m-2 display-6"></i>
                  </a>

                </td>
              </tr>

              <% }) %>
              
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') -%>