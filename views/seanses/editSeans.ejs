<%- include('../partials/header') -%>

<%- include('../navbar/navbar') -%>
<div class="container-fluid">
  <div class="container mx-auto p-4 m-4">
    <form class="card" method="post">

      <div class="card-header">
        <h1 class="text-center p-2">Szeánsz módosítás</h1>
      </div>

      <div class="card-body">
        <div class="row">
          <div class="col-sm-12 text-center">

            <h2 class="p-2">Azonosító: <%= seans.seansId%></h2>
            <h2 class="p-2">Dátum: <%= seans.date %></h2>

            <hr class="my-3">
          </div>
        </div>

        <div class="row">
          <div class="col-sm-12 p-2">
            <h3 class="p-2">Fogyasztott teák:</h3>

            <div class="table-responsive">
              <table class="table table-bordered table-striped table-hover">
                <thead>
                  <tr>
                    <th class="text-center">Tea neve</th>
                    <th class="text-center">Művelet</th>
                  </tr>
                </thead>

                <tbody>
                  <% seans.teas.forEach((tea) => { %>
                    <tr>
                      <td class="text-center align-middle"><%= tea.name %></td>
                      <td class="text-center align-middle">
                        <i class="bi bi-trash display-6"></i>
                      </td>
                    </tr> 
                  <% }) %>
                </tbody>
              </table>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-sm-12 p-2">
            <h3 class="p-2">Új tea hozzáadása</h3>
          </div>

          <div class="text-center">
             <button class="btn shadow-none" type="button" id="newTeaBtn">
                <i class="bi bi-plus-circle-fill display-5"></i>
              </button>
          </div>

          <div class="col-sm-12 col-md-6 mx-auto">
            <div id="teaForms"></div>
          </div>
        </div>
        
      </div>

      <div class="card-footer">
        <div class="col-sm-12 p-2 text-center">
          <button class="btn btn-lg btn-success" type="submit">Mentés</button> 
        </div>
      </div>
    </form>
  </div>
</div>


<script src="/static/js/newTea.js"></script>
<%- include('../partials/footer') -%>