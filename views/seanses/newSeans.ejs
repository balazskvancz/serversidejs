<%- include('../partials/header') -%>

<%- include('../navbar/navbar') -%>
<div class="container-fluid">
  <div class="container mx-auto p-4 m-4">
    <form class="card" method="post" action="">

      <div class="card-header">
        <h1 class="text-center p-2">Új szeánsz felvétele</h1>
      </div>

      <div class="card-body">
        <div class="row">
          <div class="col-sm-12 col-md-6 mx-auto">
            <% if (typeof error !== 'undefined') { %>
              <span class="text-danger"><%= error %></span>
            <% } %>
            <label class="fw-bold">Dátum</label>
            <input type="date" class="form-control" name="date">
            <hr class="my-3">
          </div>
        </div>

        <div class="row">
          <div class="col-sm-12 col-md-6 mx-auto">
            <h4 class="p-2">Teák</h4>

            <div class="col-sm-12 text-center">
              <button class="btn shadow-none" type="button" id="newTeaBtn">
                <i class="bi bi-plus-circle-fill display-5"></i>
              </button>
            </div>
            <div id="teaForms"></div>
          </div>


        </div>

      </div>

      <div class="card-footer">
        <div class="col-sm-12 p-2 text-center">
          <button class="btn btn-lg btn-primary shadow-none" type="submit">Mentés</button>
        </div>
      </div>
    </form>
  </div>
</div>

<script src="/static/js/newTea.js"></script>
<%- include('../partials/footer') -%>